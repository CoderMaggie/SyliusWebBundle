{% macro list(rates) %}

{% if rates|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', '#id') }}</th>
            <th>{{ sylius_resource_sort('category') }}</th>
            <th>{{ sylius_resource_sort('zone') }}</th>
            <th>{{ sylius_resource_sort('name') }}</th>
            <th>{{ sylius_resource_sort('amount') }}</th>
            <th>{{ sylius_resource_sort('includedInPrice', 'included in price?') }}</th>
            <th>{{ sylius_resource_sort('calculator') }}</th>
            <th>{{ sylius_resource_sort('updatedAt', 'last updated') }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for rate in rates %}
        <tr> 
            <td>{{ rate.id }}</td>
            <td>{{ rate.category }}</td>
            <td>{{ rate.zone }}</td>
            <td>{{ rate.name }}</td>
            <td>{{ rate.amountAsPercentage }}%</td>
            <td>
                <span class="label label-{{ rate.includedInPrice ? 'success' : 'important'}}">
                    {{ rate.includedInPrice ? 'sylius.backend.yes'|trans : 'sylius.backend.no'|trans }}
                </span>
            </td>
            <td><span class="label label info">{{ rate.calculator }}</span></td>
            <td>{{ rate.updatedAt|date }}</td>
            <td>
                <div class="btn-group pull-right">
                    <a href="{{ path('sylius_backend_tax_rate_show', {'id': rate.id}) }}" class="btn">
                       <i class="icon-book"></i> {{ 'sylius.backend.show'|trans }}
                    </a>
                    <a href="{{ path('sylius_backend_tax_rate_update', {'id': rate.id}) }}" class="btn">
                       <i class="icon-pencil"></i> {{ 'sylius.backend.edit'|trans }}
                    </a>
                    <a href="{{ path('sylius_backend_tax_rate_delete', {'id': rate.id}) }}" class="btn btn-danger">
                        <i class="icon-trash"></i> {{ 'sylius.backend.delete'|trans }}
                    </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert alert-info">
    <h4 class="alert-heading">{{ 'sylius.backend.alert.info'|trans }}</h4>
    {{ 'sylius.backend.tax_rate.no_results'|trans }}
</div>
{% endif %}

{% endmacro %}
