{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusWebBundle:Backend/Prototype:macros.html.twig' as macros %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.backend.prototype.index_header'|trans|raw }}</h1>
</div>

<div class="well">
    <a href="{{ path('sylius_backend_prototype_create') }}" class="btn btn-primary">
        <i class="icon-plus-sign"></i> {{ 'sylius.backend.prototype.create'|trans }}
    </a>
    <a href="{{ path('sylius_backend_option_index') }}" class="btn btn-success">
        <i class="icon-adjust"></i> {{ 'sylius.backend.option.manage'|trans }}
    </a>
</div>

{% if prototypes.haveToPaginate() %}
    {{ pagerfanta(prototypes, 'twitter_bootstrap_translated') }}
{% endif %}

{{ macros.list(prototypes) }}

{% if prototypes.haveToPaginate() %}
    {{ pagerfanta(prototypes, 'twitter_bootstrap_translated') }}
{% endif %}
{% endblock %}
