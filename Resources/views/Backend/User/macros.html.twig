{% macro list(users) %}

{% if users|length > 0 %}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', 'sylius.backend.user.id'|trans) }}</th>
            <th>{{ sylius_resource_sort('username', 'sylius.backend.user.username'|trans) }}</th>
            <th>{{ sylius_resource_sort('email', 'sylius.backend.user.email'|trans) }}</th>
            <th>{{ sylius_resource_sort('enabled', 'sylius.backend.user.enabled'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            <td>
                <span class="label label-{{ user.enabled ? 'success' : 'important'}}">
                    {{ user.enabled ? 'sylius.backend.yes'|trans : 'sylius.backend.no'|trans }}
                </span>
            </td>
            <td>
                <div class="btn-group pull-right">
                    <a href="{{ path('sylius_backend_user_show', {'id': user.id}) }}" class="btn">
                        <i class="icon-book"></i> {{ 'sylius.backend.show'|trans }}
                    </a>
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert alert-info">
    <h4 class="alert-heading">{{ 'sylius.backend.alert.info'|trans }}</h4>
    {{ 'sylius.backend.user.no_results'|trans }}
</div>
{% endif %}

{% endmacro %}
