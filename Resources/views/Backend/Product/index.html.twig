{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusWebBundle:Backend/Product:macros.html.twig' as macros %}

{% block content %}
<div class="page-header">
<h1>{{ 'sylius.backend.product.index_header'|trans|raw }}</h1>
</div>

<div class="well">
    <a href="{{ path('sylius_backend_product_create') }}" class="btn btn-primary">
        <i class="icon-plus-sign"></i> {{ 'sylius.backend.product.create'|trans }}
    </a>
</div>

{% if products.haveToPaginate()|default(false) %}
{{ pagerfanta(products, 'twitter_bootstrap_translated') }}
{% endif %}

{{ macros.list(products) }}

{% if products.haveToPaginate()|default(false) %}
{{ pagerfanta(products, 'twitter_bootstrap_translated') }}
{% endif %}
{% endblock %}
