{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusWebBundle::macros.html.twig' as macros %}
{% import 'SyliusWebBundle:Backend/Product:macros.html.twig' as productMacros %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.backend.product.index_header'|trans|raw }}</h1>
</div>

<div class="well well-small">
    <a href="{{ path('sylius_backend_product_create') }}" class="btn btn-primary">
        <i class="icon-plus-sign"></i> {{ 'sylius.backend.product.create'|trans }}
    </a>
    <a href="{{ path('sylius_backend_option_index') }}" class="btn btn-success">
        <i class="icon-th-large"></i> {{ 'sylius.backend.option.manage'|trans }}
    </a>
    <a href="{{ path('sylius_backend_property_index') }}" class="btn btn-success">
        <i class="icon-align-justify"></i> {{ 'sylius.backend.property.manage'|trans }}
    </a>
</div>

{{ macros.pagination(products) }}
{{ productMacros.list(products) }}
{{ macros.pagination(products) }}

{% endblock %}
