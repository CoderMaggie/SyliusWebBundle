{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.backend.option.update_header'|trans|raw }}</h1>
</div>

<form action="{{ path('sylius_backend_option_update', {'id': option.id}) }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusWebBundle:Backend/Option:_form.html.twig' %}
    <div class="form-actions">
        <input type="submit" value="{{ 'sylius.backend.save_changes'|trans }}" class="btn btn-primary btn-large" />
        <a href="{{ path('sylius_backend_option_index') }}" class="btn btn-large">{{ 'sylius.backend.cancel'|trans }}</a>
    </div>
</form>
{% endblock %}
